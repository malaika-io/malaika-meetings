mixin right-sidebar
    aside.chitchat-right-sidebar(id='slide-menu')
        .custom-scroll.right-sidebar
            .contact-profile
                .theme-title
                    .media
                        div
                            h2 Profile
                            h4 Ajouter une description
                        .media-body.text-right
                            a.icon-btn.btn-outline-light.btn-sm.close-profile.ml-3(href='#')
                                i(data-feather='x')
                .details
                    .contact-top
                        img.bg-img(src='images/avtar/2.jpg' , alt="")
                    .name
                        h3 Mhamdi karim
                        h6 Add Description
            .status.other
                h5.block-title.p-b-25 Contact info
                ul
                    li
                        h5
                            a(href='#')
                                i(data-feather='smartphone')
                                | +12 3456789587
                    li
                        h5
                            a(href='https://themeforest.net/user/pixelstrap/portfolio')
                                i(data-feather='crosshair')
                                | https://pixelstrap
                    li
                        h5
                            a(href='#')
                                i(data-feather='map-pin')
                                | 1766  Fidler Drive Texas, 78238.
            .status
                ul
                    li
                        input.js-switch(type='checkbox')
                        h5 Block
                    li
                        input.js-switch1(type='checkbox')
                        h5 Mute
                    li
                        input.js-switch2(type='checkbox' checked='')
                        h5 Get Notification
            .status.other
                ul
                    li
                        h5
                            a(href='#')
                                i(data-feather='share-2')
                                | share Contact
                    li
                        h5
                            a(href='#')
                                i(data-feather='trash-2')
                                | Clear Chat
                    li
                        h5
                            a(href='#')
                                i(data-feather='external-link')
                                | Export Chat
                    li
                        h5
                            a(href='#')
                                i(data-feather='alert-circle')
                                | Report Contact
